<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TopTipAnimStyle">

        <item name="android:windowEnterAnimation">@anim/popshow_up_anim</item>        <!-- 指定显示的动画xml  -->

        <item name="android:windowExitAnimation">@anim/pophidden_down_anim</item>       <!-- 指定消失的动画xml  -->

    </style>

    <style name="BottomTipAnimStyle">

        <item name="android:windowEnterAnimation">@anim/popshow_down_anim</item>        <!-- 指定显示的动画xml  -->

        <item name="android:windowExitAnimation">@anim/pophidden_up_anim</item>       <!-- 指定消失的动画xml  -->

    </style>


</resources>
